package JavaLar;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		JavaScript javaScript = new JavaScript(8, 10, 3, 0);
		Python python = new Python(8,9,4,0);
		
		System.out.println("Digte os instantes:");
		int instantes = scanner.nextInt();
		
		python.mover(instantes);
		javaScript.mover(instantes);
		
		
		int[] posicaoJS = javaScript.getPosicao();
		int[] posicaoPython = python.getPosicao(); 
		
		
		System.out.println("A posição atual do Planeta JavaScript é (" + posicaoJS[0] + " , " + posicaoJS[1] + ")" );
		System.out.println("A posição atual de Python é: (" + posicaoPython[0] + " , " + posicaoPython[1]+ ")");
		
		scanner.close();
	}

}
