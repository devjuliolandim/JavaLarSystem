package JavaLar;

public class RubyOnRails extends Planetas {

	private int orbitaPermitida[][];
	private int indicePosAtual = 0;

	public RubyOnRails(int posicaoX, int posicaoY, int velocidade, int horas) {
		super(posicaoX, posicaoY, velocidade, horas);

		preencherOrbita();
		setVelocidade(velocidade);
		setPosicao(new int[] { 8, 11 });
	}

	public void preencherOrbita() {

		int x = 8;
		int y = 10;

		orbitaPermitida = new int[24][2];

		for (int i = 0; i < 24; i++) {

			orbitaPermitida[i][0] = x;
			orbitaPermitida[i][1] = y;

			if (i < 3) {
				x--;

			} else if (i < 9) {
				y--;

			} else if (i < 15) {
				x++;
			} else if (i < 21) {

				y++;
			} else {

				x--;
			}

		}

	}

	public void mover(int instantes) {

		for (int i = 0; i < orbitaPermitida.length; i++) {
			
			indicePosAtual = (indicePosAtual + velocidade)% orbitaPermitida.length;
			setPosicao(orbitaPermitida[indicePosAtual]);
			
		}
		
		
		
		
	}

}
