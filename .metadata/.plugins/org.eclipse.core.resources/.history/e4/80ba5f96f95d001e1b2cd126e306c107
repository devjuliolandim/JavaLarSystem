package JavaLar;

import java.util.Random;

public class Bugs extends OutrosPersonagens {

	private int X;
	private int Y;
	
	
	public Bugs(int posicaoX, int posicaoY, int[] posicao) {
		super(posicaoX, posicaoY, posicao);

	}

	
	
	public void PlotarBug() {
		
		Random random = new Random();
		
	    X = random.nextInt(15) + 1;
		Y = random.nextInt(15) + 1;
	}
	
	public int getX() {
		return X;
	}
	
	public int getY() {
		return Y;
	}
	
}
